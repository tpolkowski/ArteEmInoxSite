@using SiteBruno.Models
@model SiteBruno.Models.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<style>
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        width: 100%;
        margin: auto;
    }
</style>




<div id="HomeCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @{
            for (var i = 0; i < Model.Imagens.Count; i++)
            {
                if (i == 0)
                {
            <li data-target="#HomeCarousel" data-slide-to="@i" class="active"></li>
                }
                else
                {
            <li data-target="#HomeCarousel" data-slide-to="@i"></li>
                }

            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        @{
            for (var i = 0; i < Model.Imagens.Count; i++)
            {
                if (i == 0)
                {
            <div class="item active">
                <a href="../../Content/Images/@Model.Imagens[i]">
                    <div class="col-xs-12" style="position: absolute; text-align: center; font-size: 50px; color: white; vertical-align: middle;">olá </div>

                </a>
                <img src="/Content/Images/@Model.Imagens[i]">
            </div>
                }
                else
                {
            <div class="item">
                 <a href="../../Content/Images/@Model.Imagens[i]">
                    <img src="/Content/Images/@Model.Imagens[i]">
                </a>
            </div>
                }
            }
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#HomeCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="right carousel-control" href="#HomeCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>

